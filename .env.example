PORT=3100

# Postgres runtime / migrate
POSTGRES_USER=blob_user
POSTGRES_PASSWORD=blob_pass
POSTGRES_DB=blob_service
BLOB_PG_URL=postgresql://blob_user:blob_pass@postgres:5432/blob_service

# S3 / MinIO (use internal service hostname `minio`)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=blobs
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123

# Provide explicit MinIO root creds (used by MinIO container)
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# Simple inter-service API key
BLOB_API_KEY=dev-secret-key
DB_LOG=true
