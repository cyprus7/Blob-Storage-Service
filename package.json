{
  "name": "blob-service",
  "version": "0.1.0",
  "description": "Standalone Blob Storage Service (NestJS, S3-compatible, Clean Architecture)",
  "main": "dist/main.js",
  "scripts": {
    "start": "node --env-file=.env dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "migrate:blob": "drizzle-kit migrate --config ./drizzle.blob.config.ts",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"src/**/__tests__/**\"",
    "test": "jest --maxWorkers=50% --testPathIgnorePatterns \"src/__tests__/e2e/\"",
    "test:parallel": "jest --maxWorkers=75% --testPathIgnorePatterns \"src/__tests__/e2e/\"",
    "test:e2e": "jest \"src/__tests__/e2e\" --runInBand --testTimeout=20000"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^8.1.0",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}